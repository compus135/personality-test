.my {
  position: relative;
}
.my-bg {
  width: 100%;
  margin-top: -1px;
}
.user-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  text-align: center;
}
.avatar {
  width: 60px;
  height: 60px;
  background-color: white;
  border-radius: 50%;
  overflow: hidden;
  margin: 20px auto 0;
}
.nickname {
  color: white;
  margin: 10px 0 20px;
}

.order-list {
  position: absolute;
  top: 120px;
  left: 0;
  right: 0;
  min-height: calc(100vh - 120px);
  border-radius: 10px;
  background: #fff;
  padding: 20px 0 20px 20px;
}
.order-item {
  position: relative;
  border-bottom: 1px solid #ccc;
  color: #666;
  line-height: 40px;
}
.order-item:last-child {
  border-bottom: none;
}

.order-view-report {
  position: absolute;
  right: 20px;
  top: 20px;
  display: flex;
  align-items: center;
}
